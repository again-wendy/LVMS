<div id="contact-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Get in contact</h3>
            <button class="close" onclick="closeModal('contact')">&times;</button>
        </div>
        <form id="contact-form" method="POST" action="send">
            <div class="modal-body">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" id="subject" name="subject">
                </div>
                <div class="form-group">
                    <label for="msg">Message</label>
                    <textarea name="msg" id="msg"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-dark-grey" onclick="closeModal('contact')">Cancel <span class="fa fa-times"></span></button>
                <button type="submit" class="btn-green">Send <span class="fa fa-paper-plane"></span></button>
            </div>
        </form>
    </div>
</div>

<div id="success-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Success!</h3>
            <button class="close" onclick="closeModal('success')">&times;</button>
        </div>
        <div class="modal-body">
            <span class="fa fa-check-circle"></span>
            <p>Your form has been sent successfully. We will contact you as soon as possible!</p>
        </div>
        <div class="modal-footer">
            <button class="btn-dark-grey" onclick="closeModal('success')">Close <span class="fa fa-times"></span></button>
        </div>
    </div>
</div>

